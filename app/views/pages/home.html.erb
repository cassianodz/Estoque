<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<table class = "main_table">
  <tr>
    <th><%= link_to "Descrição", :sort => "descricao"%></th>
    <th><%= link_to "Lote", :sort => "lote"%></th>
    <th><%= link_to "Vencimento", :sort => "vencimento"%></th>
    <th><%= link_to "Qtde", :sort => "quantidade"%></th>
    <th><%= link_to "Área", :sort => "area"%></th>
    <th>Observação</th>
  </tr>
<% @materials.each do |material| %>

<tr>
    <td><%= material.descricao %></td>
    <td><%= material.lote %></td>
    <td><%= material.vencimento %></td>
    <td><%= material.quantidade %></td>
    <td><%= material.area %></td>
    <td><%= material.observacao %></td>
    <td><%= link_to 'Show', material %></td>
    <td><%= link_to 'Edit', edit_material_path(material) %></td>
    <td><%= link_to 'Remove', material, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Cadastrar material', new_material_path %>
